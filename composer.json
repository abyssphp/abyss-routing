{
    "name": "abyss/abyss-routing",
    "description": "Routing Component",
    "license": "MIT",
    "authors": [
        {
            "name": "Dominik Szamburski",
            "email": "dominikszamburski99@gmail.com"
        }
    ],
    "require-dev": {
        "abyss/coding-standard": "^1.1.x-dev",
        "phpunit/phpunit": "^10.5-dev",
        "vimeo/psalm": "^5.x-dev"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Abyss\\Routing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Abyss\\Test\\Integration\\": "tests/integration/",
            "Abyss\\Test\\Performance\\": "tests/performance/",
            "Abyss\\Test\\Unit\\": "tests/unit/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "lint-check": "phpcs",
        "lint-fix": "phpcbf",
        "static-analysis": "psalm --shepherd --stats",
        "tests": "phpunit --colors=always"
    }
}
